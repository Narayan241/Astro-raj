generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

/* ========================
      BOOKING MODEL
======================== */

model Booking {
  id                Int      @id @default(autoincrement())   // required for screenshots relation
  fullName          String
  email             String
  mobileNumber      String?
  phone             String?
  dateOfBirth       String
  timeOfBirth       String
  placeOfBirth      String
  service           String
  consultationType  String
  question          String?
  whatsappNumber    String?
  status            String   @default("pending")
  amount            String
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  screenshots       PaymentScreenshot[]
}

/* ========================
  PAYMENT SCREENSHOT MODEL
======================== */

model PaymentScreenshot {
  id         Int      @id @default(autoincrement())
  bookingId  Int
  imageUrl   String
  uploadedAt DateTime @default(now())

  booking    Booking  @relation(fields: [bookingId], references: [id])
}

/* ========================
    CONTACT FORM MODEL
======================== */

model ContactMessage {
  id           String   @id @default(cuid())
  name         String
  email        String
  mobileNumber String?
  phone        String?
  message      String
  read         Boolean  @default(false)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}
